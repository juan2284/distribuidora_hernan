// Esta configuraci√≥n nos permite establecer algunas opciones para el compilador de TS.
{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
        "esnext"
    ],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}